<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<form>
  <div class="field form-group">
    <%= form.text_field :activity, class:"form-control", placeholder: "Activity" %>
  </div>
  </br>
  <div class="field form-group">
    <%= form.text_field :duration, class:"form-control", placeholder: "Duration (Hours)" %>
  </div>
  <div class="field form-group">
    <%= form.number_field :user_id, id: :todo_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  </br>
  <div class="field form-group">
    <%= form.label :is_completed, style: "display: block" %>
    <%= form.checkbox :is_completed, class:"form-check-label" %>
  </div>
  </br>      
  <div class="actions">
    <%= form.submit class: "btn btn-secondary" %>
  </div>
<% end %>
</form>
