<% if todo.user == current_user %>
  <tr>
    <td><%= link_to todo.activity, todo %></td>
    <td><%= todo.duration %></td>
    <td><%= todo.is_completed ? "✅": "❌" %></td>
    <td><%= todo.user_id %></td>
    <td><%= link_to "Delete", todo, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
  </tr>
<% end %>